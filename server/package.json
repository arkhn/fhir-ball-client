{
  "name": "pyrog-server",
  "license": "Apache-2.0",
  "scripts": {
    "build": "rimraf dist && tsc && yarn copy-schemas",
    "copy-schemas": "cpx src/**/*.graphql dist",
    "debug": "dotenv -e $([ -f .env.dev.custom ] && echo \".env.dev.custom\" || echo \".env.dev.default\") -- nodemon --ext ts,graphql --exec ts-node --inspect src/index.ts",
    "lint": "eslint './src/**/*.ts'",
    "playground": "graphql playground",
    "start": "dotenv -e $([ -f .env.dev.custom ] && echo \".env.dev.custom\" || echo \".env.dev.default\") -- nodemon --ext ts,graphql --exec ts-node src/index.ts",
    "start:docker": "NODE_PATH=dist node ./dist/index.js",
    "test": "env $([ -f .env.dev.custom ] && cat .env.dev.custom || cat .env.dev.default) jest --testRegex=\".*\\.test\\.ts$\""
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cpx": "^1.5.0",
    "graphql-cli": "^3.0.14",
    "graphql-import-node": "^0.0.1",
    "graphql-yoga": "^1.17.4",
    "jsonwebtoken": "8.5.0",
    "multer": "^1.4.1",
    "pg": "^7.12.1",
    "prisma-binding": "^2.3.16",
    "prisma-client-lib": "^1.34.8",
    "wait-for-expect": "^1.1.1",
    "wait-on": "^3.2.0",
    "ws": "^6.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.3.4",
    "@types/bcryptjs": "2.4.2",
    "@types/graphql": "^14.0.7",
    "@types/jest": "^24.0.23",
    "@types/node": "10.12.27",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "babel-jest": "^24.3.1",
    "babel-polyfill": "^6.26.0",
    "codecov": "^3.3.0",
    "dotenv-cli": "^2.0.0",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^1.3.1",
    "jest": "^24.3.1",
    "nodemon": "1.18.10",
    "prettier": "1.17.0",
    "pretty-quick": "^1.10.0",
    "prisma": "^1.34.10",
    "rimraf": "2.6.3",
    "stringify-object": "^3.3.0",
    "ts-jest": "^24.0.0",
    "ts-node": "7.0.1",
    "typescript": "^3.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
