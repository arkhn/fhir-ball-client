{
  "name": "pyrog-version",
  "version": "0.2.0",
  "license": "GPL-3.0",
  "scripts": {
    "start": "NODE_PATH=dist/ node dist/server",
    "clean": "rm -rf dist",
    "build": "yarn -s run clean && yarn -s run generate && tsc --project tsconfig.build.json",
    "build:docker": "docker-compose build pyrog",
    "generate": "yarn -s run generate:prisma && yarn -s run generate:nexus",
    "generate:prisma": "dotenv prisma generate",
    "generate:nexus": "yarn run-ts --transpile-only src/schema",
    "dev": "ts-node-dev --project tsconfig.build.json -r tsconfig-paths/register --no-notify --respawn --transpileOnly src/server",
    "lint": "eslint './src/**/*.ts'",
    "migrate:new": "prisma migrate save --experimental",
    "migrate:up": "prisma migrate up --experimental",
    "migrate:preview": "prisma migrate up --experimental --preview --auto-approve",
    "seed:mapping": "yarn run-ts scripts/importMapping.ts",
    "export:mappings": "yarn run-ts scripts/exportMapping.ts backup",
    "test": "jest --max-workers 1 --watch",
    "test:ci": "jest --max-workers 1 --coverage",
    "run-ts": "ts-node --project tsconfig.build.json -r tsconfig-paths/register",
    "wait:db": "yarn run-ts scripts/waitForDb.ts"
  },
  "dependencies": {
    "@arkhn/fhir.ts": "^3.4.3",
    "@nexus/schema": "^0.14.0",
    "axios": "^0.19.2",
    "client-oauth2": "^4.3.3",
    "cors": "^2.8.5",
    "dotenv-cli": "^3.1.0",
    "graphql": "14.5.8",
    "graphql-shield": "6.0.6",
    "graphql-type-json": "^0.3.1",
    "graphql-yoga": "1.18.3",
    "jwt-decode": "^3.0.0-beta.2",
    "lodash.set": "^4.3.2",
    "multer": "^1.4.2",
    "nexus-plugin-prisma": "^0.17.0",
    "pg": "^7.14.0",
    "redis": "^3.0.2",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@prisma/sdk": "2.4.1",
    "@types/graphql-type-json": "^0.3.2",
    "@types/jest": "^24.9.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash.set": "^4.3.6",
    "@types/multer": "^1.3.10",
    "@types/node": "12.12.14",
    "@types/pg": "^7.14.1",
    "@types/redis": "^2.8.15",
    "@types/uuid": "^8.0.1",
    "@types/ws": "6.0.4",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "prettier-quick": "^0.0.5",
    "ts-jest": "^24.3.0",
    "ts-node": "8.5.4",
    "ts-node-dev": "1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.7.2"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  }
}
