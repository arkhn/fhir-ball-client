{
  "name": "pyrog-version",
  "version": "0.2.0",
  "license": "GPL-3.0",
  "scripts": {
    "start": "NODE_PATH=dist/ env $(cat .env) node dist/server",
    "start:docker": "node dist/server",
    "bootstrap:definitions": "env $(cat .env) ts-node scripts/fhirDefinitions.ts $(ls fhir/*.json)",
    "clean": "rm -rf dist",
    "build": "yarn -s run clean && yarn -s run generate && tsc --project tsconfig.build.json",
    "build:docker": "env $(cat .env.docker) docker build -t arkhn/pyrog-server:latest .",
    "generate": "yarn -s run generate:prisma && yarn -s run generate:nexus",
    "generate:prisma": "dotenv prisma2 generate",
    "generate:nexus": "ts-node --project tsconfig.build.json -r tsconfig-paths/register --transpile-only src/schema",
    "dev": "env $(cat .env) ts-node-dev --project tsconfig.build.json -r tsconfig-paths/register --no-notify --respawn --transpileOnly src/server",
    "lint": "eslint './src/**/*.ts'",
    "seed": "env $(cat .env) ts-node scripts/importMapping.ts",
    "wait:db": "ts-node scripts/waitForDb.ts"
  },
  "dependencies": {
    "@prisma/photon": "^2.0.0-preview019",
    "bcryptjs": "2.4.3",
    "dotenv-cli": "^3.1.0",
    "graphql": "14.5.8",
    "graphql-shield": "5.7.3",
    "graphql-type-json": "^0.3.1",
    "graphql-yoga": "1.18.3",
    "jsonwebtoken": "8.5.1",
    "lodash.set": "^4.3.2",
    "multer": "^1.4.2",
    "nexus": "0.12.0-rc.5",
    "nexus-prisma": "0.6.1",
    "node-cache": "^5.1.0",
    "pg": "^7.14.0"
  },
  "devDependencies": {
    "@prisma/sdk": "0.0.71",
    "@types/bcryptjs": "2.4.2",
    "@types/express": "^4.17.2",
    "@types/graphql-type-json": "^0.3.2",
    "@types/jsonwebtoken": "8.3.5",
    "@types/lodash.set": "^4.3.6",
    "@types/multer": "^1.3.10",
    "@types/node": "12.12.14",
    "@types/pg": "^7.14.1",
    "@types/ws": "6.0.4",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "prettier": "^1.19.1",
    "prettier-quick": "^0.0.5",
    "prisma2": "2.0.0-preview019",
    "ts-node": "8.5.4",
    "ts-node-dev": "1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.7.2"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  }
}
