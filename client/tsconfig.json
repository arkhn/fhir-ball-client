{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": true,
    "lib": ["es6", "dom", "esnext"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["**/*.tsx"],
  "exclude": ["node_modules"]
}
